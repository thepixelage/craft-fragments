{% extends '_layouts/cp' %}

{% do view.registerAssetBundle('craft\\web\\assets\\admintable\\AdminTableAsset') -%}

{% set title = 'Zones'|t('fragments') %}
{% set selectedSubnavItem = 'zones' %}

{% set zones = craft.fragments.getAllZones() %}

{% block sidebar %}
    {% include 'fragments/_includes/zonesnav.twig' with { zones: zones, selectedZoneHandle: handle } %}
{% endblock %}

{% block content %}
    <div id="zones-vue-admin-table"></div>

    <div class="buttons">
        <a href="{{ cpUrl("fragments/zones/#{handle}/add") }}" class="btn submit add icon">{{ "Add fragment to zone"|t('app') }}</a>
    </div>
{% endblock %}

{% set tableData = [] %}

{% js %}
    var columns = [
        { name: '__slot:title', title: Craft.t('app', 'Name') },
        { name: '__slot:handle', title: Craft.t('app', 'Handle') }
    ];

    new Craft.VueAdminTable({
        columns: columns,
        container: '#zones-vue-admin-table',
        deleteAction: 'fragments/zones/delete-zone',
        emptyMessage: Craft.t('app', 'No fragments added to this zone yet.'),
        tableData: {{ tableData|json_encode|raw }}
    });
{% endjs %}
