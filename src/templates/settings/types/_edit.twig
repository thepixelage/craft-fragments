{% extends "_layouts/cp" %}

{% set selectedSubnavItem = 'settings' %}
{% set selectedSettingsNavItem = 'fragmenttypes' %}

{% set fullPageForm = true %}

{% import "_includes/forms" as forms %}

{% set headlessMode = craft.app.config.general.headlessMode %}


{% block content %}
    {{ actionInput('fragments/fragment-types/save') }}
    {{ redirectInput('fragments/settings/types') }}

    {% if fragmentType.id %}{{ hiddenInput('typeId', fragmentType.id) }}{% endif %}

    {{ forms.textField({
        first: true,
        label: "Name"|t('app'),
        instructions: "What this fragment type will be called in the control panel."|t('app'),
        id: 'name',
        name: 'name',
        value: fragmentType.name,
        errors: fragmentType.getErrors('name'),
        autofocus: true,
        required: true,
    }) }}

    {{ forms.textField({
        label: "Handle"|t('app'),
        instructions: "How youâ€™ll refer to this fragment type in the templates."|t('app'),
        id: 'handle',
        name: 'handle',
        class: 'code',
        autocorrect: false,
        autocapitalize: false,
        value: fragmentType.handle,
        errors: fragmentType.getErrors('handle'),
        required: true
    }) }}

    <hr>

    {{ forms.fieldLayoutDesignerField({
        fieldLayout: fragmentType.getFieldLayout(),
    }) }}
{% endblock %}


{% if brandNewType %}
    {% js %}
        new Craft.HandleGenerator('#name', '#handle');
    {% endjs %}
{% endif %}
